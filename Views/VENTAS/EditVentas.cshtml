@model EV01.Models.VENTAS

@{
    ViewData["Title"] = "EditVentas";
}

<h1>EditVentas</h1>

<h4>VENTAS</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditVentas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroVentas" class="control-label"></label>
                <input asp-for="NroVentas" class="form-control" />
                <span asp-validation-for="NroVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVentas" class="control-label"></label>
                <input asp-for="FechaVentas" class="form-control" />
                <span asp-validation-for="FechaVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento" class="control-label"></label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexVentas">Atras</a>
</div>

<div>
    <p>
        <h2>@ViewData["MENSAJE"]</h2>
    </p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
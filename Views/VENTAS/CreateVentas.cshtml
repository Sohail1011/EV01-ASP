@model EV01.Models.VENTAS

@{
    ViewData["Title"] = "CreateVentas";
}

<h1>CreateVentas</h1>

<h4>VENTAS</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVentas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroVentas" class="control-label"></label>
                <input asp-for="NroVentas" class="form-control" />
                <span asp-validation-for="NroVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVentas" class="control-label"></label>
                <input asp-for="FechaVentas" class="form-control" />
                <span asp-validation-for="FechaVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento" class="control-label"></label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
